@using TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    @foreach (var X in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@Url.Content(X.BlogImage)" alt="" style="width:300px;height:150px" />
            </div>
            <div class="left-text">
                <h4>@X.Baslik</h4>
                <span class="doller">@X.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@X.Aciklama.Substring(0, 80) </p>
                <p><a href="/Blog/BlogDetay/@X.ID"><span class="read">Devamını Oku>></span></a></p>
            </div>

        </div>
    }
    @Html.Action("Partial2", "Default")


    <div class="clear"></div>
</div>