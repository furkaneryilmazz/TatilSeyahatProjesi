﻿@using TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="box1-left">
    @foreach (var x in Model)
    {
        <div class="bot-img">
            <a href="/Blog/BlogDetay/@x.ID"> <img src="@Url.Content(x.BlogImage)" alt="" style="width:140px;height:80px;" /> </a>
        </div>
        <div class="bot-desc">
            <p>@x.Aciklama.Substring(0, x.Aciklama.Substring(0, 50).LastIndexOf(" "))</p>
        </div>
        <div class="clear"></div>

    }
    <div class="clear"></div>
</div>